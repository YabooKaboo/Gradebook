CREATE TABLE gradebook ( 
  student_id INT PRIMARY KEY, 
  course_id INT, 
  grade DECIMAL(3,2) 
);

INSERT INTO gradebook (student_id, course_id, grade) 
VALUES (1, 1, 3.5), (1, 2, 4.0), (2, 1, 4.0), (2, 2, 3.7);

SELECT student_id, 
  SUM(grade) / COUNT(course_id) AS average_grade 
FROM gradebook 
GROUP BY student_id;
